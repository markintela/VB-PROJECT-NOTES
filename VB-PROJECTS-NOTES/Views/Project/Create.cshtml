@model VB_PROJECTS_NOTES.Models.Project

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>New Project</h4>
<hr />
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">

            <div class="form-group">
                <b><label asp-for="Name" class="control-label "></label></b>
                <input asp-for="Name" class="form-control  col-md-6" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <b><label asp-for="Country" class="control-label "></label></b>
                <select asp-for="CountryId" class="form-control form-control-sm col-md-4" asp-items="ViewBag.CountryId"></select>
            </div>
            <div class="form-group">
                <b><label asp-for="Description" class="control-label  "></label></b>
                <textarea asp-for="Description" class="form-control " rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <b><label asp-for="JenkisAddress" class="control-label  "></label></b>
                <input asp-for="JenkisAddress" class="form-control " />
                <span asp-validation-for="JenkisAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <b><label asp-for="GitAddress" class="control-label"></label></b>
                <input asp-for="GitAddress" class="form-control " />
                <span asp-validation-for="GitAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <b><label asp-for="ProvisionGitAddress" class="control-label  "></label></b>
                <input asp-for="ProvisionGitAddress" class="form-control " />
                <span asp-validation-for="ProvisionGitAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <b><label asp-for="NexusFrontEndAddress" class="control-label ">Nexus Frontend Address</label></b>
                <input asp-for="NexusFrontEndAddress" class="form-control " />
                <span asp-validation-for="NexusFrontEndAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <b><label asp-for="NexusProductAddress" class="control-label"></label></b>
                <input asp-for="NexusProductAddress" class="form-control" />
                <span asp-validation-for="NexusProductAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <b><label asp-for="BiometricProductAddress" class="control-label "></label></b>
                <input asp-for="BiometricProductAddress" class="form-control " />
                <span asp-validation-for="BiometricProductAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <b><label asp-for="Notes" class="control-label"></label></b>
                <textarea asp-for="Notes" class="form-control" rows="5" ></textarea>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary btn-sm" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
